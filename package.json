{
  "name": "pusd-stablecoin",
  "version": "1.0.0",
  "description": "POLYGON USD (PUSD) Stablecoin với staking pool và reward system",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
