    "verify:all": "hardhat run scripts/verify-all.js --network polygon",
    "verify:one": "hardhat run scripts/verify-one.js --network polygon",
    "dex:setup": "hardhat run scripts/setup-dex-liquidity.js --network polygon",
    "dex:monitor": "hardhat run scripts/monitor-price.js --network polygon",
    "dex:submit": "hardhat run scripts/submit-to-exchanges.js --network polygon",
    "pool:create": "hardhat run scripts/create-pool-guide.js --network polygon",
